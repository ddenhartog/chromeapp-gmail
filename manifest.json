{
  "manifest_version": 2,
  "name"       : "Gmail GUI",
  "short_name" : "Gmail GUI",
  "description": "A simple app to make accessing Gmail easier.",
  "author"     : "@bddenhartog",
  "version"    : "1.0",

  // Require chrome 25+
  "minimum_chrome_version": "25",
  
  "app": {
    "background": {
      "scripts": ["app/background.js"]
    }
  },

  "permissions": [
    "webview",
    "notifications",
    "https://gmail.com/",
    "https://*.google.com/"
  ],
  
  "icons": { 
    "16" : "images/googlemail-16.png", 
    "32" : "images/googlemail-32.png",
    "64" : "images/googlemail-64.png",
    "128": "images/googlemail-128.png"
  }
}
